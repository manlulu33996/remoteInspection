/* pages/home/meeting/meeting.wxss */
.meeting-view{
  background: #347be7; 
  height: 100vh; 
  overflow-y: auto;
}
.title{
  height: 280rpx;
  line-height: 280rpx;
  padding: 0 98rpx;
  font-size:54rpx;
  color: #fff;
  margin-bottom: 46rpx;
}
.tip{
  margin-top: 20rpx;
  height: 80rpx;
  padding: 0 98rpx;
  display: flex;
  color: #fff;
  margin-bottom: 46rpx;
}
.tip image{
  width: 70rpx;
  height: 80rpx;
  margin-right: 22rpx;
}
.tip text{
  height: 80rpx;
  line-height: 90rpx;
  font-size:44rpx;
}
.input-box{
  padding: 0 98rpx;
  height: 88rpx;
  margin-bottom: 95rpx;
}
.input-box input{
  width: 100%;
  display: block;
  border-bottom: 3rpx solid #fff;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
}
.btn{
  width: 560rpx;
  height: 92rpx;
  border-radius: 40rpx;
  display: block;
  background: #41C3ff;
  text-align: center;
  line-height: 92rpx;
  color: #fff;
  margin: 0 auto 40rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.btn-1,.btn-2{
  background: #fff;
  color: #3090DF;
}

.alert-bg{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
}
.view-item-alert{
  width: 600rpx;
  height: 820rpx;
  background: #fff;
  box-sizing: border-box;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -410rpx;
  border-radius: 8rpx;
  padding: 44rpx 64rpx 44rpx 44rpx;
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.alert-tit{
  height: 68rpx;
  line-height: 68rpx;
  font-size: 38rpx;
}
.alert-btn{
  width:294rpx;
  height:68rpx;
  margin: 8rpx auto 0;
  text-align: center;
  background: #02a9f8;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  line-height: 68rpx;
}

.alert-msg{
  flex: 1;
  overflow-y: auto;
  padding-bottom: 40rpx;
}
.alert-msg .line{
  box-sizing: border-box;
  min-height: 98rpx;
  padding: 28rpx 0;
  font-size: 30rpx;
  line-height: 48rpx;
  border-bottom: 2rpx solid #eee;
}